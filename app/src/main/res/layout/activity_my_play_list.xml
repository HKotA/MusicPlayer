<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPlayList">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/myrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>



    <RelativeLayout

        android:layout_below="@id/myrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_above="@+id/navigation_buttons"
            android:id="@+id/textview_linearlayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/Black"
                android:id="@+id/currentsong_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/navigation_buttons"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:layout_margin="10dp"
                android:background="@drawable/button_my_play_list_activity_pause"
                android:textAllCaps="false"
                android:id="@+id/pausebtn"
                android:text="Pause"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button

                android:layout_margin="10dp"
                android:background="@drawable/button_my_play_list_activity_stop"
                android:textAllCaps="false"
                android:id="@+id/stopbtn"
                android:text="Stop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button

                android:layout_margin="10dp"
                android:background="@drawable/button_my_play_list_activity_unpause"
                android:textAllCaps="false"
                android:id="@+id/unpausebtn"
                android:text="Unpause"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />






        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>