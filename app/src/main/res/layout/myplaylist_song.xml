<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_gravity="center"
                android:textColor="@color/Black"
                android:id="@+id/name1_textview"
                android:text="Tom Odell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_gravity="center"
                android:textColor="@color/Black"
                android:id="@+id/song1_textview"
                android:text="Another Love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button

            android:layout_margin="5dp"
            android:background="@drawable/button_my_play_list_activity_play"
            android:textAllCaps="false"
            android:text="Play"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/play1_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image_button" />

    </RelativeLayout>

</android.support.v7.widget.CardView>